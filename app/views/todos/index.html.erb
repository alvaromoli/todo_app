<div class="row">
  <div class="col-12 mt-2 offset-2 mb-2">
    <%= link_to "Crear Todo", todos_new_path, class: "btn btn-warning btn-sm" %>
  </div>
</div>
<div class="row">
  <div class="col-8 offset-2">
    <% @todos.each do |todo| %>
    <div class="card">
      <div class="card-block">
        <p class="card-body"><%= todo.description %></p>
        <div class="card-footer">
          <%= link_to "Show", todo_path(todo.id), class: "btn btn-primary btn-sm" %>
          <%= link_to "Edit", todo_edit_path(todo.id), class: "btn btn-secondary btn-sm" %>
          <%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Sure?' }, class: "btn btn-danger btn-sm" %>
          <%= link_to 'Completed', todo_complete_path(todo), class: "btn btn-info btn-sm" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
