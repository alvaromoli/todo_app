<div class="row">
  <div class="col-12">
    <%= form_with model: @todo, local: true do |form| %>
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_field :description, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.submit "Crear", class: "btn btn-primary btn-sm" %>
      </div>
    <% end %>
  </div>
</div>
